<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yohel.uno.MainActivity"
    android:background="@drawable/blanco">


    <TextView
        android:text="@string/rainbow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/bright_foreground_inverse_material_dark"
        android:textSize="24sp"
        tools:textColor="@color/bright_foreground_material_light"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginStart="12dp" />

    <Button
        android:text="@string/iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="llamar"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imageView2"
        android:background="@drawable/rain"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="94dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
